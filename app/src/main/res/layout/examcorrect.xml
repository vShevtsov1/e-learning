<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- User answer EditText -->

    <!-- Correct answer TextView -->

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:background="@drawable/circleradius" />

    <TextView
        android:id="@+id/task_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:text="Ім'я завдання:"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/task_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="160dp"
        android:layout_marginTop="8dp"
        android:padding="16dp"
        android:text="Ім'я завдання"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/userAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="65dp"
        android:padding="16dp"
        android:text="Ваша відповідь:"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/userAnswerText"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="122dp"
        android:layout_marginTop="65dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="Ваша відповідь"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/CorrectAnswer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="114dp"
        android:padding="16dp"
        android:text="Правильна відповідь:"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/CorrectAnswerText"
        android:layout_width="249dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="147dp"
        android:layout_marginTop="114dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="Правильна відповідь"
        android:textSize="12sp"
        android:textStyle="bold" />


</RelativeLayout>